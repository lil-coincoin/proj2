{# templates/question/_questions_append.html.twig #}

{% for question in questions %}
    <turbo-stream action="append" target="questions">
        <template>
            <li class="list-group-item p-3">
                <h5>
                    <a href="{{ path('question_show', { 'id': question.id }) }}" data-turbo="false">
                        {{ question.title }}
                    </a>
                </h5>
                {% if question.content %}
                    <p>{{ question.content|slice(0, 50) }}...</p>
                {% endif %}
                <small class="text-secondary d-flex align-items-center gap-1">
                    {{ question.user.username }} a pos√© une question
                    le {{ question.createdAt|date('d.m.Y') }}
                </small>
            </li>
        </template>
    </turbo-stream>
{% endfor %}